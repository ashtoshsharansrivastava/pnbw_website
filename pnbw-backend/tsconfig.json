{
  "compilerOptions": {
    /* ---------------------------------
       BASIC OUTPUT
    --------------------------------- */
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2019",
    "module": "CommonJS",

    /* ---------------------------------
       RESOLUTION / INTEROP
    --------------------------------- */
    "moduleResolution": "node",
    "esModuleInterop": true,        // allows  default-import syntax
    "resolveJsonModule": true,
    "types": ["node"],              // __dirname, path, process, etc.

    /* ---------------------------------
       STRICTNESS / SPEED
    --------------------------------- */
    "strict": true,
    "skipLibCheck": true,           // faster compiles, ignore 3rd-party .d.ts
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
